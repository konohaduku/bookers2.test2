<div class='container'>
  <div class='row'>
    <div class='col-md-2'>
      <%= render 'users/info', user: @book.user %>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %>
            <%= link_to @book.title, @book %>
            <%= @book.body %><br>
            <%= @book.user.name %>
  
           <%= render "favorites/favorite", book: @book %><br>
            <% end %>
          </td>
          </tr>
            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
             <% end %>
<div>
  <tr>
  <td>
  コメント件数：<%= @book.book_comments.count %>
  </td>
  </tr>

  <tr>
  <td>
    <% @book.book_comments.each do |book_comment| %>
    <%= image_tag book_comment.user.get_profile_image, class: "rounded-circle", size:"50x50" %>
    <%= book_comment.comment %>
    <% if book_comment.user == current_user %>
    <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
     <% end %><br>
    <%= book_comment.user.name %><br>
    <% end %>
    </td>
  </tr>
   <tr>
  <td>
  <%= form_with model: [@book, @book_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", size: "50" %>
  </td>
  <td><%= f.submit "送信する" %></td>
  <% end %>

  </tr>
</div>

      </table>


    </div>
  </div>
</div>